<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/alex_dialog_layer_list_shadow_rectangle"
        android:padding="10px">

        <com.weiguowang.schoolmate.view.ProgressWheel
            android:id="@+id/progress_wheel"
            android:layout_width="@dimen/loading_bar_size"
            android:layout_height="@dimen/loading_bar_size"
            android:layout_gravity="center_horizontal"
            wheel:matProg_barColor="@color/loading_bar"
            wheel:matProg_circleRadius="@dimen/matProg_circleRadius"
            wheel:matProg_progressIndeterminate="true" />

    </RelativeLayout>

</RelativeLayout>